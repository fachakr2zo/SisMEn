<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.silver23.sismen.PersonaActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Gestión de usuarios"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView9"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/bSerch"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/etNombre"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/colorPrimaryDark"
            android:text="Buscar"
            android:textColor="@android:color/background_light" />

        <EditText
            android:id="@+id/etFecha"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/etNombre"
            android:layout_alignStart="@+id/etNombre"
            android:layout_below="@+id/bSerch"
            android:layout_marginTop="14dp"
            android:ems="10"
            android:hint="Fecha Nacimiento"
            android:inputType="date" />

        <EditText
            android:id="@+id/etPeso"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/etFecha"
            android:layout_alignStart="@+id/etFecha"
            android:layout_below="@+id/etFecha"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Peso"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etAltura"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/etPeso"
            android:layout_alignStart="@+id/etPeso"
            android:layout_below="@+id/etPeso"
            android:layout_marginTop="11dp"
            android:ems="10"
            android:hint="Altura"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tvEnf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/etAltura"
            android:gravity="center"
            android:text="¿Posee alguna enfermedad que se vea afectada por su alimentación?" />

        <EditText
            android:id="@+id/etSn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tvEnf"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:gravity="center"
            android:hint="Si/No"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etEnf"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/etSn"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:gravity="center"
            android:hint="Enfermedad"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/bSave"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_above="@+id/bEliminar"
            android:layout_alignLeft="@+id/bActualizar"
            android:layout_alignStart="@+id/bActualizar"
            android:layout_marginBottom="15dp"
            android:background="@color/colorPrimaryDark"
            android:text="Guardar"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/bEliminar"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:background="@color/colorPrimaryDark"
            android:text="Eliminar"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/bActualizar"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_above="@+id/bSave"
            android:layout_alignLeft="@+id/bEliminar"
            android:layout_alignStart="@+id/bEliminar"
            android:layout_marginBottom="11dp"
            android:background="@color/colorPrimaryDark"
            android:text="Actualizar"
            android:textColor="@android:color/background_light" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
