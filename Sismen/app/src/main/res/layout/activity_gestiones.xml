<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.silver23.sismen.GestionesActivity">

    <RelativeLayout
        android:layout_width="382dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Gestiones"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bMenus"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/bNutri"
            android:layout_alignStart="@+id/bNutri"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="49dp"
            android:background="@color/colorPrimaryDark"
            android:text="Gestión de Menu"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="30dp" />

        <Button
            android:id="@+id/bEnferm"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/bUsers"
            android:layout_alignStart="@+id/bUsers"
            android:layout_below="@+id/bUsers"
            android:layout_marginTop="22dp"
            android:background="@color/colorPrimaryDark"
            android:text="Gestión de Enfermedades"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bNutri"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/bUsers"
            android:layout_alignStart="@+id/bUsers"
            android:layout_below="@+id/bMenus"
            android:layout_marginTop="26dp"
            android:background="@color/colorPrimaryDark"
            android:text="Gestión de Nutricionistas"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bUsers"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bNutri"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@color/colorPrimaryDark"
            android:text="Gestión de Usuarios"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bIng"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/bEnferm"
            android:layout_alignStart="@+id/bEnferm"
            android:layout_below="@+id/bEnferm"
            android:layout_marginTop="25dp"
            android:background="@color/colorPrimaryDark"
            android:text="Gestión de Ingredientes"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
