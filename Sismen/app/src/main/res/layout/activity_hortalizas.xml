<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.silver23.sismen.HortalizasActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Gestion de Hortalizas"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/etCantidad"
            android:layout_alignStart="@+id/etCantidad"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="37dp"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etCantidad"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/etPeso"
            android:layout_alignBottom="@+id/etPeso"
            android:layout_alignLeft="@+id/bSave"
            android:layout_alignStart="@+id/bSave"
            android:ems="10"
            android:hint="Cantidad"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/bSerch"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/bSave"
            android:layout_alignRight="@+id/bSave"
            android:layout_alignTop="@+id/etNombre"
            android:background="@color/colorPrimaryDark"
            android:text="Buscar"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/bSave"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/etCantidad"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@color/colorPrimaryDark"
            android:text="Guardar"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/bEliminar"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/bSave"
            android:layout_alignStart="@+id/bSave"
            android:layout_below="@+id/bSave"
            android:layout_marginTop="17dp"
            android:background="@color/colorPrimaryDark"
            android:text="Eliminar"
            android:textColor="@android:color/background_light" />

        <EditText
            android:id="@+id/etPeso"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_below="@+id/etNombre"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/etNombre"
            android:layout_toRightOf="@+id/etNombre"
            android:ems="10"
            android:hint="kg, g, t, .."
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/bSave"
            android:layout_alignStart="@+id/bSave"
            android:layout_below="@+id/bEliminar"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimaryDark"
            android:text="Actualizar"
            android:textColor="@android:color/background_light" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
